<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Account Types", "Index", "AccountTypes", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Accounts", "Index", "Accounts", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Income Stream", "Index", "IncomeStreams", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Automatic Payments Log", "Index", "AutomaticPaymentLogs", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Automatic Payments", "Index", "AutomaticPayments", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("House Savings", "Index", "HouseSavings", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Payment Frequencies", "Index", "PaymentFrequencies", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Savings Goals", "Index", "SavingsGoals", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Transaction Categories", "Index", "TransactionCategories", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Transaction Log", "Index", "TransactionLogs", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Transaction Types", "Index", "TransactionTypes", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
